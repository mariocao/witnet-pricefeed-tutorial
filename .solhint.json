{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      ">=0.7.0 <0.9.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off",
    "no-inline-assembly": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 80
      }
    ]
  }
}